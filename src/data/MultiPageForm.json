{
  "formId": "registrationForm",
  "formTitle": "Registration",
  "pages": [
    {
      "pageId": "yourDetailsPage",
      "sections": [
        {
          "sectionId": "yourDetails",
          "sectionTitle": "Your Details",
          "sectionHint": "Please provide your details below.",
          "fields": [
            {
              "fieldId": "firstName",
              "fieldLabel": "First Name",
              "inputField": {
                "fieldId": "firstName",
                "type": "text",
                "validation": [
                  {
                    "type": "maxLength",
                    "max": 50,
                    "errorMessage": "First name must be no more than 50 characters long"
                  },
                  {
                    "type": "required",
                    "errorMessage": "First name is required"
                  }
                ]
              }
            },
            {
              "fieldId": "lastName",
              "fieldLabel": "Last Name",
              "inputField": {
                "fieldId": "lastName",
                "type": "text",
                "validation": [
                  {
                    "type": "maxLength",
                    "max": 50,
                    "errorMessage": "Last name must be no more than 50 characters long"
                  },
                  {
                    "type": "required",
                    "errorMessage": "Last name is required"
                  }
                ]
              }
            },
            {
              "fieldId": "dob",
              "fieldLabel": "Date of Birth",
              "inputField": {
                "fieldId": "dob",
                "type": "date",
                "validation": [
                  {
                    "type": "mustBeInThePast",
                    "errorMessage": "Date of birth must be in the past"
                  },
                  {
                    "type": "required",
                    "errorMessage": "Please enter a valid date of birth"
                  }
                ]
              }
            },
            {
              "fieldId" : "email",
              "fieldLabel": "Email Address",
              "inputField": {
                "fieldId": "email",
                "type": "text",
                "validation": [
                  {
                    "type": "email",
                    "errorMessage": "Please enter a valid email address"
                  },
                  {
                    "type": "required",
                    "errorMessage": "Email address is required"
                  }
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "pageId": "servicePage",
      "sections": [
        {
          "sectionId": "services",
          "sectionTitle": "Services",
          "fields": [
            {
              "fieldId": "serviceType",
              "fieldLabel": "Which of our services are you interested in finding out more about?",
              "inputField": {
                "fieldId": "serviceType",
                "type": "checkboxes",
                "validation": [
                  {
                    "type": "required",
                    "errorMessage": "Please select at least one service"
                  }
                ],
                "props": {
                  "options": [
                    {
                      "id": "designConsultancy",
                      "value": "designConsultancy",
                      "label": "Design Consultancy"
                    },
                    {
                      "id": "softwareDevelopment",
                      "value": "softwareDevelopment",
                      "label": "Software Development"
                    },
                    {
                      "id": "projectManagement",
                      "value": "projectManagement",
                      "label": "Project Management"
                    },
                    {
                      "id": "brandManagement",
                      "value": "brandManagement",
                      "label": "Brand Management"
                    }
                  ]
                }
              }
            }
          ]
        }
      ]
    },
    {
      "pageId": "otherInfoPage",
      "sections": [
        {
          "sectionId": "otherInfo",
          "sectionTitle": "Other Information",
          "fields": [
            {
              "fieldId": "otherInfo",
              "fieldLabel": "Is there anything else you would like to tell us?",
              "inputField": {
                "fieldId": "otherInfo",
                "type": "textArea",
                "validation": [
                  {
                    "type": "maxLength",
                    "max": 500,
                    "errorMessage": "Please share your coments in under 500 characters" 
                  }
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "pageId": "commsPage",
      "pageTitle": "And finally...",
      "sections": [
        {
          "sectionId": "howDidYouHear",
          "sectionTitle": "How did you hear about us?",
          "fields": [
            {
              "fieldId": "howDidYouHear",
              "fieldLabel": "How did you hear about us?",
              "inputField": {
                "fieldId": "howDidYouHear",
                "type": "select",
                "validation": [
                  {
                    "type": "required",
                    "errorMessage": "Please select an option"
                  }
                ],
                "props": {
                  "options": [
                    {
                      "id": "google",
                      "value": "google",
                      "label": "Google"
                    },
                    {
                      "id": "facebook",
                      "value": "facebook",
                      "label": "Facebook"
                    },
                    {
                      "id": "twitter",
                      "value": "twitter",
                      "label": "Twitter / X"
                    },
                    {
                      "id": "linkedin",
                      "value": "linkedin",
                      "label": "LinkedIn"
                    },
                    {
                      "id": "other",
                      "value": "other",
                      "label": "Other"
                    }
                  ]
                }
              }
            }
          ]
        },
        {
          "sectionId": "commsConsent",
          "sectionTitle": "Consent",
          "fields": [
            {
              "fieldId": "commsConsent",
              "fieldLabel": "Can we contact you about our services?",
              "inputField": {
                "fieldId": "commsConsent",
                "type": "radios",
                "validation": [
                  {
                    "type": "required",
                    "errorMessage": "Please select an option"
                  }
                ],
                "props": {
                  "options": [
                    {
                      "id": "yes",
                      "value": "yes",
                      "label": "Yes"
                    },
                    {
                      "id": "no",
                      "value": "no",
                      "label": "No"
                    }
                  ]
                }
              }
            }
          ]
        }
      ]
    }
  ]
}