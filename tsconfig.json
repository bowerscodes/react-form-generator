{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "incremental": true,

    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["jest", "node"],
  },
  "include": ["src/", "**/*.ts", "**/*.tsx",],
  "exclude": ["node_modules"]
}
